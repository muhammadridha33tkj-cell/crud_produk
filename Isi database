CREATE DATABASE IF NOT EXISTS crud_produk_db CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci;
USE crud_produk_db;
CREATE TABLE IF NOT EXISTS produk (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nama VARCHAR(150),
  harga INT,
  deskripsi TEXT,
  foto VARCHAR(255)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

